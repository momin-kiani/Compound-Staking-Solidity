{
    "name": "compound-staking-solidity",
    "version": "1.0.0",
    "description": "Staking exercise",
    "scripts": {
        "compile": "hardhat compile",
        "compile-force": "hardhat compile --force",
        "format": "prettier --check --write .prettierrc *.json *.js contracts/**/*.sol",
